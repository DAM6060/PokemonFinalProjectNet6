@{
	ViewBag.Title = "Home Page";
}
<div class="mt-4 p-5 bg-light text-center">
	<h2 class="display-4">Hello, Admin!</h2>
	<p class="lead mb-1 mt-3">
		This is your administrator area - you can <b>read</b>, <b>create</b>,
		and <b>edit</b> Pokemon, Moves and Abilities.
		
	</p>
	<p class="lead mt-1">
		You can also see <b>all users and players</b> and <b>all teams</b> in the
		system.
	</p>
	<hr class="my-4">
	<a asp-area="" asp-controller="Team" asp-action="LeaderBoards"
	   class="btn btn-primary btn-lg">LeaderBoards</a>
	<a asp-area="" asp-controller="Team" asp-action="Add"
	   class="btn btn-primary btn-lg">Create Team</a>
	<span> | </span>
	<a asp-area="Admin" asp-controller="Move" asp-action="Add"
	   class="btn btn-primary btn-lg">Add new Move</a>
	<span> | </span>
	<a asp-area="Admin" asp-controller="Pokemon" asp-action="AddSpecies"
	   class="btn btn-primary btn-lg">Add new Species Pokemon</a>
	<a asp-area="Admin" asp-controller="User" asp-action="All"
	   class="btn btn-primary btn-lg">All Users</a>
	<a asp-area="Admin" asp-controller="Pokemon" asp-action="ChooseSpeciesToEdit"
	   class="btn btn-primary btn-lg">Edit Pokemon</a>
</div>