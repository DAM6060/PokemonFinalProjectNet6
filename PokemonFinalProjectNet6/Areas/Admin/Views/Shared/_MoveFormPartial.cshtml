@model MoveFormModel

<form method="post">
	<div class="form-group">
		<label asp-for="Name"></label>
		<input asp-for="Name" class="form-control" />
		<span asp-validation-for="Name" class="text-danger"></span>
	</div>
	<div class="form-group">
		<label asp-for="Type"></label>
		<select asp-for="Type" class="form-control">
			@foreach (PokemonTypeCustom type in MoveFormModel.Types)
			{
				<option value="@type">@type</option>
			}
		</select>
		<span asp-validation-for="Type" class="text-danger"></span>
	</div>
	<div class="form-group">
		<label asp-for="Description"></label>
		<input asp-for="Description" class="form-control" />
		<span asp-validation-for="Description" class="text-danger"></span>
	</div>
	<div class="form-group">
		<label asp-for="DamageClass"></label>
		<select asp-for="DamageClass" class="form-control">
			@foreach (DamageClass damagageClass in MoveFormModel.DamageClasses)
			{
				<option value="@damagageClass">@damagageClass</option>
			}
		</select>
		<span asp-validation-for="DamageClass" class="text-danger"></span>
	</div>
	<div class="form-group">
		<label asp-for="Power"></label>
		<input asp-for="Power" class="form-control" />
		<span asp-validation-for="Power" class="text-danger"></span>
	</div>
	<div class="form-group">
		<label asp-for="Accuracy"></label>
		<input asp-for="Accuracy" class="form-control" />
		<span asp-validation-for="Accuracy" class="text-danger"></span>
	</div>
	<div class="form-group">
		<label asp-for="PowerPoints"></label>
		<input asp-for="PowerPoints" class="form-control" />
		<span asp-validation-for="PowerPoints" class="text-danger"></span>
	</div>
	<div class="form-group">
		<label asp-for="Effect"></label>
		<input asp-for="Effect" class="form-control" />
	</div>
	<div class="form-group">
		<label asp-for="EffectChance"></label>
		<input asp-for="EffectChance" class="form-control" />

	</div>
	<div class="form-group">
		<label asp-for="isEffectUserString"></label>
		<select asp-for="isEffectUserString" class="form-control">
			<option value="Yes">Yes</option>
			<option value="No">No</option>
			<option value="Not applicable">Not applicable</option>
		</select>

	</div>
	<div class="form-group">
		<label asp-for="EffectDuration"></label>
		<input asp-for="EffectDuration" class="form-control" />
	</div>
	<div class="form-group">
		<label asp-for="Ailment"></label>
		<input asp-for="Ailment" class="form-control" />

	</div>
	<div class="form-group">
		<label asp-for="AilmentChance"></label>
		<input asp-for="AilmentChance" class="form-control" />

	</div>

	<div class="form-group">
		<label asp-for="HealAmount"></label>
		<input asp-for="HealAmount" class="form-control" />

	</div>
	<div class="form-group">
		<label asp-for="HealType"></label>
		<select asp-for="HealType" class="form-control">
			@foreach (HealType healType in MoveFormModel.HealTypes)
			{
				<option value="@healType">@healType</option>
			}
		</select>
	</div>
	<button type="submit" class="btn btn-primary">Create</button>
</form>